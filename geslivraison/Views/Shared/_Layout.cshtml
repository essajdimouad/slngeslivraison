<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GesLivraison</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/geslivraison.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- 🔥 HEADER / NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    🚚 GesLivraison
                </a>

                <!-- Bouton mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Accueil</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Administrateur" asp-action="Index">
                                👨‍💼 Administrateurs
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Administrateur" asp-action="GererUtilisateurs">
                                👥 Clients
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Administrateur" asp-action="GererDemandes">
                                📦 Demandes
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 🔽 CONTENU DES PAGES -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- 🔻 FOOTER -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - GesLivraison
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
