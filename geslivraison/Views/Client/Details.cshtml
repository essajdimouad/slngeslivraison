@model geslivraison.Models.Client

@{
    ViewData["Title"] = "Détails Client";
}

<h2>Détails du Client</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Nom</dd>

        <dt class="col-sm-2">Prénom</dt>
        <dd class="col-sm-10">@Model.Prenom</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Adresse</dt>
        <dd class="col-sm-10">@Model.Adresse</dd>
    </dl>
</div>

<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Modifier</a>
    <a class="btn btn-secondary" asp-action="Index">Retour</a>
</p>
