@model geslivraison.Models.Client

@{
    ViewData["Title"] = "Supprimer Client";
}

<h2>Supprimer ce Client ?</h2>

<div>
    <h4>@Model.Nom @Model.Prenom</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Adresse</dt>
        <dd class="col-sm-10">@Model.Adresse</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Confirmer</button>
    <a class="btn btn-secondary" asp-action="Index">Annuler</a>
</form>
